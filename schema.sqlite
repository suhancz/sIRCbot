CREATE TABLE igyerek ( id INTEGER PRIMARY KEY AUTOINCREMENT, igyer TEXT NOT NULL, pass TEXT NOT NULL, regdate TEXT NOT NULL , lastseen TEXT, welcome TEXT);
CREATE TABLE sqlite_sequence(name,seq);
CREATE TABLE igyek ( id INTEGER PRIMARY KEY AUTOINCREMENT, igyer_id INTEGER NOT NULL, comment TEXT, regdate TEXT NOT NULL, FOREIGN KEY (igyer_id) REFERENCES igyerek(id) );
CREATE TABLE igyek_join (id INTEGER PRIMARY KEY AUTOINCREMENT, igy_id INTEGER NOT NULL, igyer_id INTEGER NOT NULL, regdate TEXT NOT NULL, FOREIGN KEY(igy_id) REFERENCES igyek(id), FOREIGN KEY(igyer_id) REFERENCES igyerek(id));
CREATE TABLE hosts (id INTEGER PRIMARY KEY AUTOINCREMENT, igyer_id INTEGER NOT NULL, host TEXT NOT NULL, FOREIGN KEY(igyer_id) REFERENCES igyerek(id));
CREATE TABLE bulletin (id INTEGER PRIMARY KEY AUTOINCREMENT, igyer_id INTEGER NOT NULL, bullet TEXT NOT NULL, regdate TEXT NOT NULL, private BOOLEAN NOT NULL, sticky BOOLEAN, FOREIGN KEY(igyer_id) REFERENCES igyerek(id));
CREATE TABLE symbols (id INTEGER PRIMARY KEY AUTOINCREMENT, symbol TEXT NOT NULL);
